<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h4">
        <item name="android:textColor">#070707</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_thin</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/g_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="h3">
        <item name="android:textColor">#070707</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="blueButtonStyle">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:background">@color/g_dark_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>

    <style name="whiteButtonStyle">
        <item name="android:textColor">#4b4f60</item>
        <item name="android:background">@color/g_white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_thin</item>
    </style>

    <style name="SmallTextViewThin">
        <item name="android:textColor">@color/g_hint</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
    </style>


    <style name="EditTextSettings">
        <item name="android:width">0dp</item>
        <item name="height">45sp</item>
        <item name="fontFamily">@font/sf_pro_display</item>
        <item name="background">@drawable/btn_white_background</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
        <item name="paddingStart">10sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>